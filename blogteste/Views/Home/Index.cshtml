@{
    ViewData["Title"] = "Home Page";
}

<div class="video-container">
    <video autoplay muted loop class="video-fullscreen">
        <source src="~/videos/f1video.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="overlay">
        <div class="overlay-content">
            <h1 class="display-4">Welcome to Formula 1 Blog</h1>
        </div>
    </div>
</div>


    <style>
        body, html {
        background-color: #6E6765;
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow-x: hidden;
        }

     

        .video-fullscreen {
            position: absolute;
            top: 50%;
            left: 50%;
            min-width: 100%;
            min-height: 100%;
            width: auto;
            height: auto;
            transform: translate(-50%, -50%);
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            text-align: center;
        }

        .overlay-content {
            max-width: 80%;
        }

            .overlay-content .display-4 {
                font-size: 3rem;
            }

            .overlay-content a {
                color: #ffffff;
                text-decoration: underline;
            }
    </style>


