@model blogteste.Models.artigos

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: #6E6765;
    }

    .card {
        background-color: #ffffff;
    }
</style>

<h1 class="text-center my-4">Edit Article</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="id" />

                    <div class="form-group mb-3">
                        <label asp-for="titulo" class="form-label"></label>
                        <input asp-for="titulo" class="form-control" />
                        <span asp-validation-for="titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="conteudo" class="form-label"></label>
                        <textarea asp-for="conteudo" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="conteudo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="autor" class="form-label"></label>
                        <input asp-for="autor" class="form-control" readonly />
                        <span asp-validation-for="autor" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="data" class="form-label"></label>
                        <input asp-for="data" class="form-control" type="datetime-local" />
                        <span asp-validation-for="data" class="text-danger"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.imagem))
                    {
                        <div class="form-group mb-3">
                            <label>Current Image</label>
                            <div>
                                <img src="~/images/@Model.imagem" class="img-fluid" alt="Current Image" />
                            </div>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label asp-for="imagem" class="form-label">Upload New Image</label>
                        <input asp-for="imagem" class="form-control" type="file" />
                        <span asp-validation-for="imagem" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="rating" class="form-label"></label>
                        <input asp-for="rating" class="form-control" />
                        <span asp-validation-for="rating" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="IsAccessible" class="form-check-input" type="checkbox" />
                            <label asp-for="IsAccessible" class="form-check-label"></label>
                        </div>
                        <span asp-validation-for="IsAccessible" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
