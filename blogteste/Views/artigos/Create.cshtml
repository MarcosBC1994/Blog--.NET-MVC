@model blogteste.Models.artigos

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center my-4">Create Article</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="titulo" class="form-label"></label>
                        <input asp-for="titulo" class="form-control" />
                        <span asp-validation-for="titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="conteudo" class="form-label"></label>
                        <textarea asp-for="conteudo" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="conteudo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <input type="hidden" asp-for="autor" value="@User.Identity.Name" />
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="data" class="form-label"></label>
                        <input asp-for="data" class="form-control" type="datetime-local" />
                        <span asp-validation-for="data" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="imagem" class="form-label"></label>
                        <input asp-for="imagem" class="form-control" type="file" />
                        <span asp-validation-for="imagem" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
